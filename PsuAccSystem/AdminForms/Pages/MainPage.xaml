<Page x:Class="PsuAccSystem.AdminForms.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PsuAccSystem.AdminForms.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="50">
            <Button Style="{StaticResource AddButton}"
                    Margin="20"
                    FontSize="30"
                    Command="{Binding OpenWorkersAddFormCommand}"
                    ToolTip="Добавить сотрудника"/>
            <Button Style="{StaticResource AddButton}"
                    Margin="20"
                    Background="{StaticResource Orange}"
                    Content="🖊"
                    ToolTip="Редактировать информацию о сотруднике"/>
            <Button Style="{StaticResource AddButton}"
                    Margin="20"
                    Background="{StaticResource Green}"
                    Content="📝"
                    ToolTip="Просмотреть информацию о всех сотрудниках"/>
        </StackPanel>
    </Grid>
</Page>
